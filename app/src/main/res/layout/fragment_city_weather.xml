        <com.devspark.robototextview.widget.RobotoTextView android:id="@+id/main_value" android:layout_width="wrap_content" android:layout_height="124dp" android:layout_gravity="center_horizontal" android:textColor="#fff" android:text="31Â°" android:gravity="center" app:layout_behavior="com.krava.dagger2test.presentation.view.behavoir.MainWeatherTempBehavior" app:typeface="roboto_regular" android:textSize="80sp" app:finalHeight="48dp" app:finalYPosition="2dp" app:startHeight="2dp" app:startToolbarPosition="22dp" app:startXPosition="2dp"/>

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
            xmlns:rfal="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_main_rfal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            rfal:rfal_frame_color="#ffffff"
            rfal:rfal_frame_alpha="0.7"
            >
            <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
                xmlns:rfab="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_main_rfab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                rfab:rfab_size="normal"
                rfab:rfab_drawable="@drawable/ic_menu_white_24dp"
                rfab:rfab_color_normal="#FF9800"
                rfab:rfab_color_pressed="#263238"
                rfab:rfab_shadow_radius="4dp"
                rfab:rfab_shadow_color="#999999"
                rfab:rfab_shadow_dx="0dp"
                rfab:rfab_shadow_dy="5dp"
                />
        </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
